<mvc:View
    controllerName="empreg.controller.List"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
>
    <Page
        class="sapUiContentPadding customFont"
        showNavButton="true"
        navButtonPress="onNavBack"
    >
        <headerContent>
            <Button icon="sap-icon://action" />
        </headerContent>

        <customHeader>
            <Bar>
                <contentLeft>
                    <Button
                        icon="sap-icon://nav-back"
                        press="onNavBack"
                    />
                </contentLeft>

                <contentMiddle>
                    <!-- <SearchField
                        id="advancedSearch"
                        width="50%"
                        liveChange="onAdvancedSearch"
                        placeholder="Search"
                    /> -->
                </contentMiddle>

                <contentRight>
                    <Button
                        icon="sap-icon://action"
                        press="onLogout"
                    />
                </contentRight>
            </Bar>
        </customHeader>
        <content>
            <Title
                text="Extension Employees"
                class="customTitle"
            />

            <OverflowToolbar
                id="otb1"
                class="customOverflowToolbar"
            >
                <SearchField
                    id="advancedSearchField"
                    width="auto"
                    liveChange="onAdvancedSearch"
                    placeholder="Search"
                />
                <!-- <MultiComboBox
                    selectionChange="handleSelectionChange"
                    selectionFinish="handleSelectionFinish"
                    showClearIcon="{MainModel>showClearIcon}"
                    width="350px"
                    items="{
                    path: 'MainModel>/Employees',
                    sorter: { path: 'skills' }
                   }"
                >
                    <core:Item
                        key="{MainModel>fname}"
                        text="{MainModel>skills}"
                    />
                </MultiComboBox> -->
                <MultiComboBox
                    change="handleChange"
                    selectionChange="handleSelectionChange"
                    width="350px"
                    id="skillsMultiComboBox"
                >
                    <core:Item
                        key="html"
                        text="HTML"
                    />

                    <core:Item
                        key="CSS"
                        text="CSS"
                    />

                    <core:Item
                        key="CAPM"
                        text="CAPM"
                    />

                    <core:Item
                        key="Cloud Application Programming Model"
                        text="Cloud Application Programming Model"
                    />

                    <core:Item
                        key="UI5"
                        text="UI5"
                    />

                    <core:Item
                        key="Fullstack"
                        text="Fullstack"
                    />

                    <!-- Add more skills as needed -->
                </MultiComboBox>

                <ToolbarSpacer />
                <Button
                    id="createButton"
                    icon="sap-icon://add"
                    text="New Employee"
                    visible="true"
                    press="onaddnewemployee"
                    class="sapUiTinyMarginBeginEnd customButtonHeight"
                    type="Emphasized"
                />
            </OverflowToolbar>

            <List
                id="employeelist"
                items="{
        path: 'MainModel>/Employees',
        filters: [
            {
                filters: [
                    {
                        path: 'reportingPerson',
                        operator: 'Contains',
                        value1: 'Harish'
                    },
                    {
                        path: 'fname',
                        operator: 'Contains',
                        value1: 'Harish'
                    }
                ],
                and: false 
            }
        ]
    }"
                class="customFont"
            >
                <items>
                    <CustomListItem
                        class="customItemSpacing"
                        press="onListItemPress"
                        type="Navigation"
                    >
                        <HBox
                            alignItems="Center"
                            class="flexContainer"
                            justifyContent="SpaceBetween"
                        >
                            <!-- First equal part -->
                            <HBox width="45%">
                                <Image
                                    src="{
                parts: [
                    { path: 'MainModel>ID' },
                    { path: 'MainModel>gender' }
                ],
                formatter: '.formatPhoto'
            }"
                                    densityAware="false"
                                    inset="false"
                                    class="customIconSize"
                                />
                                <VBox>
                                    <Title
                                        text="{MainModel>fname} {MainModel>lname}"
                                        class="custom-title"
                                    />
                                    <HBox alignItems="Center">
                                        <Text
                                            text="Position :"
                                            class="custom-label"
                                        />
                                        <Text
                                            text="{MainModel>desig}"
                                            class="custom-designation"
                                        />
                                    </HBox>
                                    <HBox alignItems="Center">
                                        <Text
                                            text="Date Of Joining :"
                                            class="custom-label"
                                        />
                                        <Text
                                            text="{MainModel>doj}"
                                            class="custom-designation"
                                        />
                                    </HBox>
                                </VBox>
                            </HBox>

                            <!-- Second equal part -->
                            <HBox
                                width="45%"
                                alignItems="Center"
                            >
                                <VBox alignItems="Start">
                                    <!-- Use alignItems="Start" to align vertically at the start -->
                                    <HBox alignItems="Center">
                                        <Text
                                            text="Phone Number :"
                                            class="custom-label"
                                        />
                                        <Text
                                            text="{MainModel>Phno}"
                                            class="custom-designation"
                                        />
                                    </HBox>
                                    <HBox alignItems="Center">
                                        <Text
                                            text="Email :"
                                            class="custom-label"
                                        />
                                        <Text
                                            text="{MainModel>email}"
                                            class="custom-designation"
                                        />
                                    </HBox>
                                </VBox>
                            </HBox>
                            <!-- Third equal part -->
                            <HBox width="10%">
                                <VBox alignItems="End">
                                    <ObjectStatus
                                        text="{= ${MainModel>leave} === 'Yes' ? 'Leave' : 'Working'}"
                                        state="{= ${MainModel>leave} === 'Yes' ? 'Warning' : 'Success'}"
                                    />
                                </VBox>
                            </HBox>
                        </HBox>
                    </CustomListItem>
                </items>
            </List>
        </content>
    </Page>
</mvc:View>
